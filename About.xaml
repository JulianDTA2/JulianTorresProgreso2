<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JulianTorresProgreso2.About"
             Title="About">

    <Grid Margin="20,35,20,20"
          RowSpacing="6"
          ColumnSpacing="6">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <BoxView x:Name="myBoxView"
             BackgroundColor="Gray"/>
        <Label Text="Nombre: &#10; Julian Torres" 
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"/>
        <BoxView   
                x:Name="myBox"
                Grid.Column="1"
                Color="White" />
        <Label 
            Grid.Column="1"
            Text="Fecha: &#10; 23/10/2004" 
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"/>
        <BoxView 
            Grid.Row="1"
            BackgroundColor="White"/>
        <Label 
            Grid.Row="1"
            Text="Intereses: &#10; Musica y Tecnologia" 
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"/>    
        <BoxView 
                Grid.Row="1"
                Grid.Column="1"
                Color="Gray" />
        <Label Grid.Row="1"
               Grid.Column="1"
               Text="Version: &#10; 1.0" 
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>
    
    </Grid>
    
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JulianTorresProgreso2.MainPage">

    <ScrollView>
        <StackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Bienvenido a la aplicacion de Julian Torres"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Image
                Source="pokemon.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Mi pokemon favorito" />

            <Button
                Text="Ir a Chistes"
                x:Name="BotonIrAChistes"
                Clicked="BotonIrAChistes_Clicked"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
            <Button
                Text="Ir a About"
                x:Name="BotonIrAAbput"
                Clicked="BotonIrAAbput_Clicked"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
            
        </StackLayout>
    </ScrollView>

</ContentPage>
